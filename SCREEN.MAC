;	SCREEN.MAC - bios screen parameters

IFDEF	USE_PRG_DC
	IFDEF EXTERNAL_PORTS
	SCR_BUFF	EQU	0EEd0h+800h
	ELSE
	SCR_BUFF	EQU	0EEd0h
	ENDIF
ELSE
	IFDEF	RK60K
	SCR_BUFF	EQU	0e6d0h
	ELSE
	SCR_BUFF	EQU	0b6d0h
	ENDIF
ENDIF

PHYS_W		EQU	78
PHYS_H  	equ	29+1
SCR_SIZE	equ	PHYS_W*PHYS_H

IFDEF	RK60K
HorizShift	EQU	10
FirstStr	equ	3
ELSE
HorizShift	EQU	0
FirstStr	equ	2
ENDIF

VRAM	EQU	SCR_BUFF+FirstStr*PHYS_W+HorizShift

SCR_W	EQU	78
SCR_H	EQU	25+1

ENDSCR	EQU	VRAM+SCR_H*PHYS_W

@ESC	EQU	27
